{
  "name": "react-redux-crud",
  "version": "0.0.1",
  "main": "build/index.js",
  "repository": "git@github.com:hwaterke/react-redux-crud.git",
  "author": "hwaterke <hwaterke@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -r build || true",
    "build": "yarn build:babel && yarn build:flow",
    "build:babel":
      "BABEL_ENV=production babel src --copy-files --out-dir build",
    "build:flow": "flow-copy-source src build",
    "test": "jest",
    "flow": "flow check",
    "lint": "eslint 'src/**'",
    "format": "prettier --write 'src/**/*.js'",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "redux-crud": "^3.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-preset-react-app": "^3.1.1",
    "eslint": "^4.18.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.44.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.6.1",
    "flow-bin": "^0.66.0",
    "flow-copy-source": "^1.3.0",
    "husky": "^0.14.3",
    "jest": "^22.3.0",
    "lint-staged": "^6.1.1",
    "prettier": "^1.10.2",
    "redux": "^3.7.2",
    "reselect": "^3.0.1"
  },
  "lint-staged": {
    "*.js": ["prettier --write", "eslint --max-warnings 0", "git add"],
    "*.{css,scss,json,md}": ["prettier --write", "git add"]
  },
  "jest": {
    "testMatch": ["**/tests/**/*.test.js?(x)"]
  }
}
