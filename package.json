{
  "name": "redux-crud-provider",
  "version": "0.0.1-alpha.3",
  "main": "build/index.js",
  "repository": "git@github.com:hwaterke/redux-crud-provider.git",
  "author": "hwaterke <hwaterke@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -r build || true",
    "build": "yarn build:babel && yarn build:flow",
    "build:babel": "BABEL_ENV=production babel src --copy-files --out-dir build",
    "build:flow": "flow-copy-source src build",
    "test": "jest",
    "flow": "flow check",
    "lint": "eslint 'src/**'",
    "format": "prettier --write 'src/**/*.js'",
    "precommit": "lint-staged",
    "prepublishOnly": "yarn build"
  },
  "dependencies": {
    "ramda": "^0.25.0",
    "redux-crud": "^3.3.0"
  },
  "devDependencies": {
    "axios": "^0.18.0",
    "axios-mock-adapter": "^1.15.0",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.5",
    "babel-preset-react-app": "^3.1.2",
    "eslint": "^5.0.1",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.10.0",
    "flow-bin": "^0.75.0",
    "flow-copy-source": "^2.0.1",
    "husky": "^0.14.3",
    "jest": "^23.2.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.7",
    "react": "^16.4.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "reselect": "^3.0.1"
  },
  "peerDependencies": {
    "axios": "^0.18.0",
    "react": "^16.4.1",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0",
    "reselect": "^3.0.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --max-warnings 0",
      "git add"
    ],
    "*.{css,scss,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "testMatch": [
      "**/tests/**/*.test.js?(x)"
    ]
  }
}
