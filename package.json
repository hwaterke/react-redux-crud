{
  "name": "react-redux-crud",
  "version": "0.0.1",
  "main": "build/index.js",
  "repository": "git@github.com:hwaterke/react-redux-crud.git",
  "author": "hwaterke <hwaterke@users.noreply.github.com>",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -r build || true",
    "build": "BABEL_ENV=production babel src --copy-files --out-dir build",
    "lint": "eslint 'src/**'",
    "format": "prettier --write 'src/**/*.js'",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babel-preset-react-app": "^3.1.1",
    "eslint": "^4.18.0",
    "eslint-config-react-app": "^2.1.0",
    "eslint-plugin-flowtype": "^2.44.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.6.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.1.1",
    "prettier": "^1.10.2"
  },
  "lint-staged": {
    "*.js": ["prettier --write", "eslint --max-warnings 0", "git add"],
    "*.{css,scss,json,md}": ["prettier --write", "git add"]
  }
}
